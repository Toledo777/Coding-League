{
    "env": {
        "node": true,
        "es2021": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": [
        "code-runner/**",
        "node_modules",
        "dist",
        ".vscode",
        "package-lock.json",
        "project-java-script.jar"
    ],
    "plugins": [
        "react"
    ],
    "rules": {
        "react/prop-types": "off",
        "indent": [
            "error",
            "tab"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}